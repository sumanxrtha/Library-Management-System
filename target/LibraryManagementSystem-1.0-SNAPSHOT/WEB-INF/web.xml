        <servlet-name>Staff</servlet-name>
        <servlet-class>Controller.StaffServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Staff</servlet-name>
        <url-pattern>/staff</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Teacher</servlet-name>
        <servlet-class>Controller.TeacherServlet</servlet-class>
    </servlet>
